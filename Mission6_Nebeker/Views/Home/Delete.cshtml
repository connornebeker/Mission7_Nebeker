@{
    ViewData["Title"] = "Home Page";
}
@Model.Movie

<h1>Delete Confirmation</h1>
<h3>Are you sure you would like to delete @Model.Title?</h3>
<br/>
<form method="post">
    <input type="hidden" asp-for="MovieId"/>

    <button type="submit" class="btn btn-danger">Yes</button>
    <a class="btn btn-info" asp-controller="Home" asp-action="ViewMovies">No</a>
</form>